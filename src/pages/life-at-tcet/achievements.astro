const tableRows = [
  {
    c1: "1",
    c2: "2012 - 2013",
    c3: "Electoworks-National level Electronics competition, SPIT, Mumbai",
    c4: "1",
    c5: "National",
  },
  {
    c1: "2",
    c2: "2012 - 2013",
    c3: "Xavier MUN",
    c4: "2",
    c5: "National",
  },
  {
    c1: "3",
    c2: "2012 - 2013",
    c3: "TCET MUN",
    c4: "2",
    c5: "Inter-College",
  },
  {
    c1: "4",
    c2: "2012 - 2013",
    c3: "Mumbai MUN",
