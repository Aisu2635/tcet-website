---
import Layout from "../../layouts/Layout.astro";
import { Table, Thead, Tbody, Tr, Th, Td } from "react-super-responsive-table";
import "react-super-responsive-table/dist/SuperResponsiveTableStyle.css";

const tableRows = [
  {
    c1: "1",
    c2: "2012 - 2013",
    c3: "Electoworks-National level Electronics competition, SPIT, Mumbai",
    c4: "1",
    c5: "National",
    background: "#EFF8FF",
  },
  {
    c1: "2",
    c2: "2012 - 2013",
    c3: "Xavier MUN",
    c4: "2",
    c5: "National",
    background: "white",
  },
  {
    c1: "3",
    c2: "2012 - 2013",
    c3: "TCET MUN",
    c4: "2",
    c5: "Inter-College",
    background: "#EFF8FF",
  },
  {
    c1: "4",
    c2: "2012 - 2013",
    c3: "Mumbai MUN",
    c4: "3",
    c5: "National",
    background: "white",
  },
  {
    c1: "5",
    c2: "2012 - 2013",
    c3: "Xavier MUN",
    c4: "3",
    c5: "Inter-College",
    background: "#EFF8FF",
  },
  {
    c1: "6",
    c2: "2012 - 2013",
    c3: "Xavier MUN",
    c4: "3",
    c5: "Inter-College",
    background: "white",
  },
  {
    c1: "7",
    c2: "2012 - 2013",
    c3: "Xavier MUN",
    c4: "3",
    c5: "National",
    background: "#EFF8FF",
  },
];
---

<astro>
  <style>
    .table,
    .table .th,
    .table .td {
      border: 1px solid #d1e9ff;
    }
  </style>
</astro>
<Layout
  title='Welcome to TCET Mumbai'
  description='Thakur College of Engineering and Technology'
>

  <Table className='table text-sm' hideTableHeaderOnMobile={false}>
    <Thead className='th font-bold'>
      <Tr>
        <Th>Sr. No</Th>
        <Th>Year</Th>
        <Th>Name of Event</Th>
        <Th>Position</Th>
        <Th>Type of Event</Th>
      </Tr>
    </Thead>
    <Tbody>
      {
        tableRows.map((t) => (
          <Tr className='td text-center' style={{ background: t.background }}>
            <Td className='px-2 py-3'>{t.c1}</Td>
            <Td>{t.c2}</Td>
            <Td>{t.c3}</Td>
            <Td>{t.c4}</Td>
            <Td>{t.c5}</Td>
          </Tr>
        ))
      }
    </Tbody>
  </Table>
</Layout>
