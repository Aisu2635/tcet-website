---
import {
   data
} from "./data";
import Document from "./Document.tsx";
---


   
    
    <main class="flex flex-col">
        {data.map((item ) => (
          <div  class="mt-7">
            <p class="font-semibold text-lg text-[#667085] mx-7 mb-5 uppercase">
              {item.title}
            </p>
            <div class="gap-4 h-fit border rounded-lg border-blue-gray-200 shadow-md mx-8 p-4 w-auto mx-6 px-2 grid lg:grid-cols-3 md:grid-cols-3 sm:grid-cols-2 grid-cols-1 justify-between items-center">
                
              {item.files.map((file ) => (
                <div 
                  class={`hover:bg-[${item.hoverColor}] bg-[${item.bgColor}]  text-[${item.textColor}] border border-solid border-[${item.borderColor}] rounded-lg`}>
                        <div>
                        <Document
                        title={file.title}
                        url={file.url}
                        color={item.textColor}
                        />
                    </div>
                </div>
              ))}
          
            </div>
          </div>
        ))}
      </main>
      


